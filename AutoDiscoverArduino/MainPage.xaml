<Page
    x:Class="AutoDiscoverArduino.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AutoDiscoverArduino.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="btnOff" Content="Off" HorizontalAlignment="Stretch" Click="btnOff_Click" IsEnabled="False" IsDoubleTapEnabled="False" Margin="0,193,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOn" Content="On" HorizontalAlignment="Stretch" Click="btnOn_Click" IsEnabled="False" IsDoubleTapEnabled="False" Margin="0,156,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtHeader" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Relay switcher" TextAlignment="Center" VerticalAlignment="Top" Margin="0,131,0,0"/>
        <TextBox x:Name="txtLog" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="" Margin="0,230,0,10"/>
    </Grid>
</Page>
